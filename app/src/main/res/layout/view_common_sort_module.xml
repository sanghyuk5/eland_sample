<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp" >

    <TextView
        android:id="@+id/tv_sort"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_black_rectangle"
        android:gravity="center_vertical"
        android:paddingStart="7dp"
        android:text="신상품순"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:layout_constraintEnd_toStartOf="@id/iv_sort"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_sort"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_black_rectangle"
        android:src="@drawable/ic_baseline_grid_view_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sort"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_sort"
        app:layout_constraintTop_toTopOf="@+id/tv_sort" />

</androidx.constraintlayout.widget.ConstraintLayout>
