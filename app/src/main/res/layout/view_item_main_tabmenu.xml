<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_item_main_root"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#f4f5f7" >

    <ImageView
        android:id="@+id/iv_item_main_tab"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_item_main_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp"
        android:lineSpacingExtra="6dp"
        android:textColor="#222222"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_item_main_tab"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="í™ˆ" />

    <View
        android:id="@+id/view_item_main_tab_underline"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="#c9000b"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_main_tab_title"
        app:layout_constraintStart_toStartOf="@+id/tv_item_main_tab_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_tab_title" />

</androidx.constraintlayout.widget.ConstraintLayout>