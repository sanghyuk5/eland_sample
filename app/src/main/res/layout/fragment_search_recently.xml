<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_report_gmailerrorred_24"
        android:gravity="center"
        android:paddingVertical="65dp"
        android:text="최근 검색어 내역이 없습니다."
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="최근 본 상품"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_top" />

    <TextView
        android:id="@+id/tv_goods_null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/ic_baseline_report_gmailerrorred_24"
        android:gravity="center"
        android:paddingVertical="65dp"
        android:text="최근 본 상품 내역이 없습니다."
        app:layout_constraintTop_toBottomOf="@id/tv_goods" />
</androidx.constraintlayout.widget.ConstraintLayout>